<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_vote_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/black_circle_background">

    <ProgressBar
        android:id="@+id/pb_vote"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:progress="90"
        android:layout_gravity="center"
        android:rotation="270"
        style="?android:progressBarStyleHorizontal"
        android:progressDrawable="@drawable/determinate_circleprogress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_vote_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Text_Caption"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="8.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        style="@style/Text_Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/vote_hipenation"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_vote_value"
        app:layout_constraintStart_toEndOf="@id/tv_vote_value"
        app:layout_constraintTop_toTopOf="@id/tv_vote_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>